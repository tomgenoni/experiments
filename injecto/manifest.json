{
    "manifest_version": 2,
    "name": "Injecto!",
    "version": "0.0.1",
    "description": "Auto inject JS/CSS",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "js": ["injecto.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        "https://tomgenoni.github.io/experiments/injecto/style.css",
        "https://tomgenoni.github.io/experiments/injecto/javascript.js",
        "local/style.css",
        "local/js.js"
    ]
}
